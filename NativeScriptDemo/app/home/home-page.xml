<Page class="page" loaded="loaded"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="NativeScriptDemo"></Label>
    </ActionBar>

    <StackLayout orientation="vertical">
        <Image src="res://logo" stretch="none" horizontalAlignment="center" ></Image>

        <TextField id="someText" hint="Write something..." autocorrect="false" autocapitalizationType="none" />
        <Button text="OK" tap="tapOk" />

        <Image src="~/images/apple.jpg" ></Image>
    </StackLayout>
</Page>
